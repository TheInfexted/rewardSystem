# Prevent directory listing
Options -Indexes

# Set default index
DirectoryIndex index.html index.php

# Allow only images and videos
<FilesMatch "\.(jpg|jpeg|png|gif|webp|mp4|webm|ogg|avi|mov)$">
    Require all granted
</FilesMatch>

# Deny all other file types except the above
<FilesMatch "\.(?!jpg|jpeg|png|gif|webp|mp4|webm|ogg|avi|mov$)[a-zA-Z0-9]+$">
    Require all denied
</FilesMatch>

# Deny PHP execution
<FilesMatch "\.php$">
    Require all denied
</FilesMatch>

# Prevent script execution
AddHandler cgi-script .php .pl .py .jsp .asp .sh .cgi
Options -ExecCGI
